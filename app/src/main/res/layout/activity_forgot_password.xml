<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context=".ForgotPasswordActivity">

    <TextView
        android:text="Digite o email:"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/editForgot"
        android:background="@drawable/background_edit"
        android:hint="@string/email"
        android:maxHeight="50dp"
        android:drawableStart="@drawable/base_icon_email"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:paddingStart="10dp"
        android:drawablePadding="10dp"
        android:paddingEnd="20dp"
        android:layout_height="50dp"/>

    <TextView
        android:text="(Digite o email corretamente para nÃ£o haver enganos)"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnFinish"
        android:text="Confirmar"
        android:textColor="@drawable/base_text_button"
        android:background="@drawable/background_button"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>