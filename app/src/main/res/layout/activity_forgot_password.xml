<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ForgotPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/background_white_rectangle"
        android:orientation="vertical"
        android:padding="20dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="Esqueci a senha"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:background="@drawable/background_blue_box"
            android:layout_marginLeft="-10dp"
            android:layout_width="200dp"
            android:layout_height="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Digite o email:"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/editForgot"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_edit"
            android:drawableStart="@drawable/base_icon_email"
            android:drawablePadding="10dp"
            android:hint="@string/email"
            android:maxHeight="50dp"
            android:paddingStart="10dp"
            android:paddingEnd="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="(Digite o email corretamente para nÃ£o haver enganos)"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btnFinish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/background_button"
            android:text="Confirmar"
            android:textColor="@drawable/base_text_button" />

    </LinearLayout>
</LinearLayout>